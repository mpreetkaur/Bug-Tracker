@model IEnumerable<Bug_Tracker.Models.Classes.Ticket>

@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    var pagedList = (IPagedList)Model;
}
<h2>Index</h2>

