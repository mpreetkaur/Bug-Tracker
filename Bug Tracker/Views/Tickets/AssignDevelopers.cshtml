@model Bug_Tracker.Models.Classes.AssignTicketToDeveloper
@{
    ViewBag.Title = "AssignUsers";
}
<div class="content-main">
    <div class="blank">
        <h2>Assign users to Project</h2>
        <hr />
        <section class="content">
            @using (Html.BeginForm())
            {<div class="form-group">
                    @Html.HiddenFor(p => p.Id)
                    @Html.DropDownListFor(p => p.SelectedUser, Model.UserList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserList, "", new { @class = "text-danger" })
                    <input type="submit" value="Submit!" class="btn btn-success" />
                </div>
            }
        </section>
    </div>
</div>